	Issn = {0747-5632},
	Journal = {Computers in Human Behavior},
	Keywords = {Computer-mediated communication, CMC, Texting, Text messaging, Language processing, Language comprehension},
	Pages = {1067 - 1075},
	Title = {Texting insincerely: The role of the period in text messaging},
	Url = {http://www.sciencedirect.com/science/article/pii/S0747563215302181},
