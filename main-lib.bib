	Issn = {1424-8220},
	Journal = {Sensors},
	Keywords = {Wireless sensor network; Received signal strength indication; DV-hop; Regularized correntropy criterion; Extreme learning machine;},
	Number = {1},
	Pages = {135},
	Title = {Efficient DV-HOP Localization for Wireless Cyber-Physical Social Sensing System: A Correntropy-Based Neural Network Learning Scheme},
